{
  "name": "checkers",
  "version": "1.0.0",
  "description": "pure js, html and css web based pvp checkers from a trillion years ago.  [Play](https://netanel-haber.github.io/checkers/).",
  "main": "index.js",
  "scripts": {
    "uglify": "uglifyjs index.js -cmo index.min.js --source-map url=index.min.js.map",
    "pkg": "zx pkg.mjs",
    "dev": "live-server . & nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netanel-haber/checkers.git"
  },
  "author": "Netanel Haber",
  "homepage": "https://github.com/netanel-haber/checkers#readme",
  "devDependencies": {
    "live-server": "^1.2.2",
    "nodemon": "^2.0.20",
    "replace-in-file": "^6.3.5",
    "uglify-js": "^3.17.3",
    "zx": "^7.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/**"
    ],
    "watch": [
      "index.js",
      "index.css",
      "index.html",
      "commit.js"
    ],
    "exec": "npm run uglify && npm run pkg"
  }
}